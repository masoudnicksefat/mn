<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_coalawebtraffic/models/fields">
        
        <field 
            name="id" 
            type="text" 
            default="0" 
            label="JGLOBAL_FIELD_ID_LABEL"   
            readonly="true" 
            class="readonly"
            description="JGLOBAL_FIELD_ID_DESC"/>

        <field 
            name="title" 
            type="text" 
            class="inputbox"
            size="40" 
            label="JGLOBAL_TITLE"
            description="COM_CWTRAFFIC_FIELD_TITLE_DESC"/>

        <field 
            name="alias" 
            type="text" 
            class="inputbox"
            size="40" 
            label="JFIELD_ALIAS_LABEL"
            description="COM_CWTRAFFIC_FIELD_ALIAS_DESC" />

        <field 
            name="catid" 
            type="categoryedit" 
            extension="com_coalawebtraffic"
            label="JCATEGORY" 
            description="COM_CWTRAFFIC_FIELD_CATEGORY_DESC"
            addfieldpath="/administrator/components/com_categories/models/fields" />

        <field 
            name="description" 
            type="editor" 
            buttons="false" 
            filter="safehtml"
            label="JGLOBAL_DESCRIPTION" 
            description="COM_CWTRAFFIC_FIELD_DESCRIPTION_DESC" />


        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="COM_CWTRAFFIC_FIELD_STATE_DESC"
            class="chzn-color-state"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field 
            name="created" 
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL" 
            description="JGLOBAL_FIELD_CREATED_DESC"
            class="inputbox" 
            size="22" 
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc" />

        <field 
            name="created_by" 
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
            description="JGLOBAL_FIELD_CREATED_BY_Desc" />

        <field 
            name="created_by_alias" 
            type="text"
            label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL" 
            description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC"
            class="inputbox" 
            size="20" />

        <field 
            name="modified" 
            type="calendar" 
            class="readonly"
            label="JGLOBAL_FIELD_MODIFIED_LABEL" 
            description="COM_CWTRAFFIC_FIELD_MODIFIED_DESC"
            size="22" 
            readonly="true" 
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc" />

        <field 
            name="modified_by" 
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"  />

        <field 
            name="checked_out" 
            type="hidden" 
            filter="unset" />

        <field 
            name="checked_out_time" 
            type="hidden" 
            filter="unset" />

        <field
            name="count"
            type="radio"
            default="1"
            class="btn-group btn-group-yesno"
            label="COM_CWTRAFFIC_FIELD_COUNT_LABEL"
            description="COM_CWTRAFFIC_FIELD_COUNT_DESC">
            <option value="1">CW_YES</option>
            <option value="0">CW_NO</option>
        </field>
        
        <field 
            name="basic_info"
            type="info"
            default=""
            label="PLG_CWZOOELEMENTS_SETTINGS_MESSAGE"/>
        
        <field
            name="ip"
            type="text"
            size="40"
            default=""
            label="COM_CWTRAFFIC_VISITOR_IP"
            description="COM_CWTRAFFIC_VISITOR_IP_DESC"/>
                
        <field
            name="botname"
            type="text"
            size="40"
            default=""
            label="COM_CWTRAFFIC_FIELD_BOTNAME_LABEL"
            description="COM_CWTRAFFIC_FIELD_BOTNAME_DESC"/>

    </fieldset>

    
</form>
